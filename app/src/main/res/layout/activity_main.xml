<?xml version="1.0" encoding="utf-8"?>    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="match_parent"    
    android:layout_height="match_parent"    
    android:orientation="vertical"    
    android:padding="16dp">    
    
    <!-- 包名输入框 -->    
    <EditText    
        android:id="@+id/editTextPackageName"    
        android:layout_width="match_parent"    
        android:layout_height="wrap_content"    
        android:hint="应用包名"    
        android:inputType="text"    
        android:maxLines="1" />    
    
    <!-- 包名示例说明 -->    
    <TextView    
        android:layout_width="match_parent"    
        android:layout_height="wrap_content"    
        android:text="示例：com.android.settings"    
        android:textColor="#757575"    
        android:textSize="12sp"    
        android:layout_marginTop="4dp"    
        android:layout_marginBottom="16dp" />    
    
    <!-- Activity名称输入框 -->    
    <EditText    
        android:id="@+id/editTextActivityName"    
        android:layout_width="match_parent"    
        android:layout_height="wrap_content"    
        android:hint="应用 Activity 名"    
        android:inputType="text"    
        android:maxLines="1" />    
    
    <!-- Activity示例说明 -->    
    <TextView    
        android:layout_width="match_parent"    
        android:layout_height="wrap_content"    
        android:text="示例：com.android.settings.accounts.AddAccountSettings"    
        android:textColor="#757575"    
        android:textSize="12sp"    
        android:layout_marginTop="4dp"    
        android:layout_marginBottom="24dp" />    
    
    <!-- 启动按钮 -->    
    <Button    
        android:id="@+id/buttonLaunchActivity"    
        android:layout_width="match_parent"    
        android:layout_height="wrap_content"    
        android:text="启动 Activity"    
        android:layout_marginTop="16dp" />    
  
    <!-- 分隔线 -->  
    <View  
        android:layout_width="match_parent"  
        android:layout_height="1dp"  
        android:background="#E0E0E0"  
        android:layout_marginTop="24dp"  
        android:layout_marginBottom="16dp" />  
  
    <!-- CVE-2023-20963 漏洞说明标题 -->  
    <TextView  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:text="CVE-2023-20963 漏洞利用工具"  
        android:textSize="18sp"  
        android:textStyle="bold"  
        android:gravity="center"    
        android:layout_marginBottom="12dp" />  
  
    <!-- 漏洞详细说明 -->  
    <TextView  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:text="该漏洞已在 Android 安全公告 2023 年 3 月的 Android 上进行修补。该漏洞应该适用于搭载 AOSP 版本 11、12、12L、13 且安全补丁级别低于 2023年3月的设备上。"  
        android:textSize="13sp"  
        android:background="#FFF3E0"  
        android:padding="8dp"  
        android:layout_marginBottom="8dp" />    
  
    <!-- 漏洞功能说明 -->  
    <TextView  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:text="漏洞功能："  
        android:textSize="14sp"  
        android:textStyle="bold"  
        android:layout_marginBottom="8dp" />  
  
    <TextView  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:text="• 绕过Android应用间的安全边界，向特权应用（如系统设置）注入恶意Intent\n• 实现权限提升攻击，通过伪造账户认证器来获得额外的系统访问权限\n• 启动受保护的系统Activity，比如密码设置界面，而无需相应权限"  
        android:textSize="13sp"  
        android:lineSpacingExtra="2dp"    
        android:padding="8dp"  
        android:layout_marginBottom="8dp" />  
  
    <!-- GitHub 链接 -->  
    <TextView  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:text="•仅用于安全研究和教育目的\n•项目链接: https://github.com/black7024/BadParcel"  
        android:textSize="12sp"    
        android:layout_marginBottom="12dp" />  
    
</LinearLayout>
